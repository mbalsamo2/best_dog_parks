<div style="padding:20px;">
  <h1> Sign up here: </h1>

  <%= render 'error_messages' if @user.errors.full_messages != [] %>

  <%= form_for @user do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    <%= f.label :email %><br>
    <%= f.text_field :email %><br><br>
    <%= f.label :password %><br>
    <%= f.text_field :password, { :value => '' } %><br><br>
    <%= f.submit %>
  <% end %>

</div>
