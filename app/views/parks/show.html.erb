<div style="padding:20px;">
  <h1><%= @park.name %></h1>
  <p><%= @park.location %></p>
  <p><%= link_to "Edit Park", edit_park_path(@park)%> - <%= link_to "Delete Park", park_path(@park), method: :delete %></p>

  <br>

  <h3> Park Features </h3>
    <ol>
      <% @park.features.each do |feature| %>
        <li>
          <%= link_to feature.name, feature_path(feature) %>
          <ul>
            <li>Rating: <%= feature.rating %> stars</li>
            <li>Comments: <%= feature.comment %></li>
          </ul>
        </li>
      <% end %>
    </ol>
  <div><%= button_to "Add a Park Feature", new_park_feature_path(@park), method: :get, class: 'btn btn-info btn-md float-xl-none' %></div>
</div>
